<%= form_tag "/messages/#{@message.id}", method: :patch do %>
  <div>
    Message Name: <input type="text" name="name" value="<%= @message.name %>">
  </div>
  <div>
    Message Body: <input type="text" name="body" value="<%= @message.body %>">
  </div>
  <input type="submit" value="Edit Message">
<% end %>